<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:weightSum="1"
    style="@style/Base.TextAppearance.AppCompat.Body2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/drop"
        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_gravity="right"
            android:background="@drawable/sekitar"
            android:layout_marginRight="23dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="sekitar"
            android:id="@+id/textView3"
            android:layout_gravity="right"
            android:textColor="#000000"
            android:layout_marginRight="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="WET WET ACEH"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_gravity="right"
            android:background="@drawable/location"
            android:layout_marginRight="23dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="my location"
            android:id="@+id/textView"
            android:layout_gravity="right"
            android:textColor="#000000"
            android:layout_marginRight="6dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="2dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:id="@+id/button1"
                android:text="BANDA ACEH"
                style="@android:style/ButtonBar"
                android:background="@drawable/banda1"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="onClick" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/button2"
            android:text="SABANG"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            style="@android:style/ButtonBar"
            android:background="@drawable/sabang1"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:onClick="onClick" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/button3"
                android:text="LHOKSEUMAWE"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@android:style/ButtonBar"
                android:background="@drawable/lhok1"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:onClick="onClick" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/button4"
                android:text="ACEH SELATAN"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@android:style/ButtonBar"
                android:background="@drawable/tt1"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:onClick="onClick" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/button5"
                android:text="ACEH BESAR"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@android:style/ButtonBar"
                android:background="@drawable/acehb1"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:onClick="onClick" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/button6"
                android:text="ACEH TENGAH"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                style="@android:style/ButtonBar"
                android:background="@drawable/aceht1"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:onClick="onClick" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>
